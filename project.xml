    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <url>http://www.junit.org</url>
    </dependency>

  </dependencies>
  <build>
        <unitTest>
            <directory>${pom.build.unitTestSourceDirectory}</directory>
            <includes>
